#2.1 and 2.2
l=[]
l1=[]
st="xyz"
for i in st:
    for j in range(1,5):
        l.append(i*j)
for i in range(1,5):
    for j in st:
        l1.append(i*j)
print(l)
print(l1)


#2.3
s=[2,3,4,5,6]
l2=[]
l1=[]
for i in range(len(s)-2):
    for j in range(i,i+3):
        l2.append([s[j]])
print(l2)
