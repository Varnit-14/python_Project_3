#1.1
def func(n):
    return n%2==0    
def myfilter(func,l):
    l1=[]
    for i in l:
        if func(i):
            l1.append(i)
    print(l1)
li=[2,3,4,5,6,7,8,5,2,4,1]
myfilter(func,li)

#1.2
def infunc(a,b):
    return a+b

def myreduce(func,l):
    sm=0
    for i in l:
        sm=func(sm,i)
    print(sm)
l2=[1,2,3,4,5,6]
myreduce(infunc,l2)

